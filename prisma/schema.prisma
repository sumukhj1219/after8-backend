generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String       @id @default(uuid())
  name     String?
  email    String       @unique
  location String?
  phone    String?
  answers  UserAnswer[]
  badges   BADGES[]     @default([])
  score    Int          @default(0)

  level   Level?  @relation(fields: [levelId], references: [id])
  levelId String?

  events             Event[] @relation("Admin")
  marketing          Event[] @relation("Marketing Manager")
  participatingEvent Event[] @relation("User")

  role      ROLE     @default(USER)
  createdAt DateTime @default(now())
  reviews   Review[]
  plan      PLANS    @default(BASIC)

  registrations EventRegistration[]

  @@index([email])
}

enum PLANS {
  BASIC
  GOLD
  PLATINUM
}

enum BADGES {
  SPARK_MEMBER
  AFTER8_INSIDER
  LEGACY_MEMBER
  TABLE_FAVOURITE
  LEGENDARY_PRESENCE
  HOST_TITLE
  GOLDEN_SPOON
  THE_ICEBREAKER
  THE_FOOD_ORACLE
  THE_PLUS_ONE_MAGNET
}

model BadgeRules {
  id                String @id @default(uuid())
  badge             BADGES @unique
  dinners           Int?
  hosted            Int?
  reviews           Int?
  avgRating         Float?
  minReferals       Int?
  minTagCount       Int?
  commentFeedLength Int?
}

model Level {
  id                String @id @default(uuid())
  name              String  @unique
  minScore          Int 
  maxScore          Int? 
  dinners           Int?
  hosted            Int?
  reviews           Int?
  avgRating         Float?
  minReferals       Int?
  minTagCount       Int?
  commentFeedLength Int?
  totalBadges       Int?
  plan              PLANS
  users             User[]

  @@unique([minScore, maxScore])
}

model Event {
  id        String   @id @default(uuid())
  name      String   
  keywords  String[]
  maxSeats  Int
  scheduled DateTime
  price     Decimal  @default(0.0)
  venue     String   @default("")
  plan      PLANS    @default(BASIC)

  maxParticipants Int?

  userId String?
  user   User?   @relation("User", fields: [userId], references: [id], onDelete: Cascade)

  adminId String
  admin   User   @relation("Admin", fields: [adminId], references: [id], onDelete: Cascade)

  marketingMgrId String?
  marketingMgr   User?   @relation("Marketing Manager", fields: [marketingMgrId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  registrations EventRegistration[]

  Review Review[]

  @@index([name])
  @@index([price])
  @@index([venue])
  @@index([scheduled])
}

model EventRegistration {
  id        String             @id @default(uuid())
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  event     Event              @relation(fields: [eventId], references: [id])
  eventId   String
  status    RegistrationStatus @default(PENDING)
  createdAt DateTime           @default(now())

  @@unique([eventId, userId])
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ROLE {
  USER
  ADMIN
  MARKETING
}

model Question {
  id         String       @id @default(cuid())
  options    Option[]
  UserAnswer UserAnswer[]
}

model Option {
  id          String       @id @default(cuid())
  scaledValue Int?
  question    Question?    @relation(fields: [questionId], references: [id])
  questionId  String?
  UserAnswer  UserAnswer[]
}

model UserAnswer {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  scaledValue Int?

  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  option   Option? @relation(fields: [optionId], references: [id])
  optionId String?

  @@unique([userId, questionId])
}

model Review {
  id         String  @id @default(uuid())
  eventId    String
  event      Event   @relation(fields: [eventId], references: [id])
  rating     Int?    @default(0)
  categoryId Int
  comment    String?
  userId     String
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
